{% assign theme_st = settings %}
{% capture variable_text_preset_size %}
    {% liquid
      assign type_presets = "h1, h2, h3, h4, h5, h6" | split: ", "
      for preset_name in type_presets
        assign preset_size_id = 'type_size_' | append: preset_name
        echo '--font-' | append: preset_name | append:'-size: ' | append: theme_st[preset_size_id] | append: ';'
      endfor
    %}
{% endcapture %}

{% echo variable_text_preset_size %}
