{% assign theme_st = settings %}
{% capture variable_text_preset %}
    {% liquid
      assign type_presets = "h1, h2, h3, h4, h5, h6" | split: ", "
      for preset_name in type_presets
        assign preset_size_id = 'type_size_' | append: preset_name
        assign preset_line_height_id = 'type_line_height_' | append: preset_name
        echo '--font-' | append: preset_name | append:'--size: ' | append: theme_st[preset_size_id] | append: 'px;'
        echo '--font-' | append: preset_name | append:'--line-height: ' | append: theme_st[preset_line_height_id] | append: ';'
        assign preset_letter_spacing_id = 'type_letter_spacing_' | append: preset_name
        assign calculator_letter_spacing = theme_st[preset_letter_spacing_id] | divided_by: 100
        assign preset_font_scale_id = 'type_font_size_scale_' | append: preset_name
        assign calculator_font_scale = theme_st[preset_font_scale_id] | divided_by: 100.0
        assign preset_font_text_transform_id = 'type_text_transform_' | append: preset_name
        assign preset_font_type_id = 'type_font_' | append: preset_name
        if theme_st[preset_font_type_id] == 'heading'
            assign preset_font_type = theme_st.heading_font.family | append: ',' | append: theme_st.heading_font.fallback_families
        else
            assign preset_font_type = theme_st.body_font.family | append: ',' | append: theme_st.body_font.fallback_families
        endif
        echo '--font-' | append: preset_name | append:'--letter-spacing: ' | append: calculator_letter_spacing | append: 'em;'
        echo '--font-' | append: preset_name | append:'--font-size-scale: ' | append: calculator_font_scale | append: ';'
        echo '--font-' | append: preset_name | append:'--text-transform: ' | append: theme_st[preset_font_text_transform_id] | append: ';'
        echo '--font-' | append: preset_name | append:'--font-family: ' | append: preset_font_type | append: ';'
      endfor
    %}
{% endcapture %}

{% echo variable_text_preset %}
