              <template>
                {%- liquid
                  echo featured_media | media_tag: image_size: '2048x', toggleable: true
                -%}
              </template>
            </product-model>
          </div>
          <button
            class="btn btn-primary w-full product__xr-button text-center"
            type="button"
            aria-label="{{ 'products.product.xr_button_label' | t }}"
            data-shopify-xr
            data-shopify-xr-hidden
            data-shopify-model3d-id="{{ featured_media.id }}"
            data-shopify-title="{{ product.title | escape }}"
          >
            {{ 'products.product.xr_button' | t }}
          </button>
        {% endif %}
      </div>
    {%- else -%}
      <div
        class="media-gallery__image{{ class }} hover-action{% if enable_image_zoom and enable_image_zoom != 'none' %} gallery_zoom_image{% endif %} rounded"
        data-position="{{ media_position }}"
        style="--aspect-ratio: {{ ratio }}"
        {% if thumbnail != true %}
          media-gallery="{{ featured_media.media_type }}"
        {% endif %}
      >
        {% render 'responsive-image',
          type: 'product',
          image: featured_media,
          image_alt: image_alt,
          motion: motion,
          fetchpriority: fetchpriority,
          class: 'rounded'
        %}
        {% if thumbnail != true and enable_image_lightbox %}
          <button
            type="button"
            is="media-zoom-button"
            class="hover-action media-zoom-button btn-reset zoom-in transition absolute {% if enable_image_zoom == 'none' %} inset-0{% else %} top-md-0 right-md-0{% endif %} pointer"
            aria-label="{{ 'products.product.zoom_button' | t }}"
