{% comment %}
  This file is auto-generated by Foxify.
  This file can be re-written at any time. Please do not update this file directly.
{% endcomment %}
{%- liquid
  assign bss_po = shop.metafields.foxify['bss-po'].value
  assign locales = shop.metafields.foxify.locales.value
  assign current_locale = request.locale.iso_code
  assign primary_locale = current_locale
  for locale in shop.published_locales
    if locale.primary
      assign primary_locale = locale.iso_code
      break
    endif
  endfor
  assign translation = locales[current_locale] | default: locales[primary_locale]
  assign prefix_class = PREFIX_CLASS | default: 'f:'
  assign theme_settings = shop.metafields.foxify.theme_settings.value
  assign show_code = show_currency_code
  if show_code == 'use_global' or show_code == blank
    assign show_code = theme_settings.showCurrencyCode
  endif

  assign selected_variant = product.selected_or_first_available_variant
  if use_variant
    assign target = selected_variant
  else
    assign target = product
  endif

  assign compare_at_price = target.compare_at_price
  assign price = target.price | default: 1999
  assign available = target.available | default: false
  assign display_price = price

  if theme_settings.productCard.displayPrice == 'max' and target == product
    assign display_price = product.price_max
  endif

  assign money_price = display_price | money

  assign money_compare_at_price = compare_at_price | money
  if show_code
    assign money_price = display_price | money_with_currency
    assign money_compare_at_price = compare_at_price | money_with_currency
  endif

  if target == product and product.price_varies
    assign money_price = translation.products.product.price.from_price_html | replace: '{{ price }}', money_price
  endif
-%}

<div
  class='
    {{ prefix_class }}price
    {%- if alignment %} {{ prefix_class }}price--{{ alignment }}{% endif -%}
    {%- if price_class %} {{ price_class }}{% endif -%}
    {%- if available == false %} {{ prefix_class }}price--sold-out {% endif -%}
    {%- if compare_at_price > price %} {{ prefix_class }}price--on-sale {% endif -%}
    {%- if target.price_varies == false and target.compare_at_price_varies %} {{ prefix_class }}price--no-compare{% endif -%}
  '
>
  {%- comment -%}
    Explanation of description list:
      - div.price__regular: Displayed when there are no variants on sale
      - div.price__sale: Displayed when a variant is a sale
  {%- endcomment -%}
  <div class='{{ prefix_class }}price__regular'>
    <span class='{{ prefix_class }}visually-hidden {{ prefix_class }}visually-hidden--inline'>
      {{- translation.products.product.price.regular_price -}}
    </span>
    <span class='{{ prefix_class }}price-item {{ prefix_class }}price-item--regular'>
      {% if bss_po %}
        <span bss-po-product-id='{{ product.id }}' bss-po-variant-price bss-po-variant-id='{{ target.id }}' bss-po-product-price>
          {{ money_price -}}
        </span>
      {% else %}
        {{ money_price }}
      {% endif %}
    </span>
  </div>
  <div class='{{ prefix_class }}price__sale'>
    <span class='{{ prefix_class }}visually-hidden {{ prefix_class }}visually-hidden--inline'>
      {{- translation.products.product.price.sale_price -}}
    </span>
    <span class='{{ prefix_class }}price-item {{ prefix_class }}price-item--sale'>
      {% if bss_po %}
        <span bss-po-product-id='{{ product.id }}' bss-po-variant-price bss-po-variant-id='{{ target.id }}' bss-po-product-price>
          {{ money_price -}}
        </span>
      {% else %}
        {{ money_price }}
      {% endif %}
    </span>
    {%- unless target.price_varies == false and target.compare_at_price_varies %}
      <span class='{{ prefix_class }}visually-hidden {{ prefix_class }}visually-hidden--inline'>
        {{- translation.products.product.price.regular_price -}}
      </span>
      <span>
        <s class='{{ prefix_class }}price-item {{ prefix_class }}price-item--regular {{ prefix_class }}price__compare'>
          {% if bss_po %}
            <span bss-po-product-id='{{ product.id }}' bss-po-variant-price bss-po-variant-id='{{ target.id }}' bss-po-product-compare-price>
              {{- money_compare_at_price -}}
            </span>
          {% else %}
            {{ money_compare_at_price }}
          {% endif %}
        </s>
      </span>
    {%- endunless -%}
  </div>
  <div class='{{ prefix_class }}price__unit-wrapper {{ prefix_class }}price__compare{% if selected_variant.unit_price_measurement == nil %} {{ prefix_class }}hidden{% endif %}'>
    <span class='{{ prefix_class }}visually-hidden'>{{ translation.products.product.price.unit_price }}</span>
    <div class='{{ prefix_class }}price__unit'>
      {%- capture unit_price_separator -%}
        <span aria-hidden="true">/</span><span class="{{ prefix_class }}visually-hidden">{{ translation.products.product.price.unit_price_separator }}&nbsp;</span>
      {%- endcapture -%}
      {%- capture unit_price_base_unit -%}
        <span data-unit-price-base-unit>
            {%- if selected_variant.unit_price_measurement -%}
              {%- if selected_variant.unit_price_measurement.reference_value != 1 -%}
                {{- selected_variant.unit_price_measurement.reference_value -}}
              {%- endif -%}
              {{ selected_variant.unit_price_measurement.reference_unit }}
            {%- endif -%}
          </span>
      {%- endcapture -%}
      <span data-unit-price>{{ selected_variant.unit_price | money }}</span>
      {{- unit_price_separator -}}
      {{- unit_price_base_unit -}}
    </div>
  </div>

  {% if show_sale_badge or show_soldout_badge %}
    <div class='{{ prefix_class }}price__badges'>
      {% if show_sale_badge %}
        {% liquid
          assign sale_badge = ''
          assign amount = 0
          case sale_badge_type
            when 'percentage'
              if compare_at_price > price
                assign amount = compare_at_price | minus: price | times: 100.0 | divided_by: compare_at_price
                assign amount = amount | round | append: '%'
              endif
              assign sale_badge = translation.products.product.price.save_price_html | replace: '{{ amount }}', amount
            when 'fixed_amount'
              if compare_at_price > price
                assign amount = compare_at_price | minus: price | money
              endif
              assign sale_badge = translation.products.product.price.save_price_html | replace: '{{ amount }}', amount
            else
              assign sale_badge = translation.products.product.on_sale
          endcase
        %}
        <div class='{{ prefix_class }}price__badge-sale' data-type='{{ sale_badge_type }}'>
          <span class='{{ prefix_class }}badge {{ prefix_class }}badge--sale'>{{ sale_badge }}</span>
        </div>
      {% endif %}
      {% if show_soldout_badge %}
        <div class='{{ prefix_class }}price__badge-sold-out'>
          <span class='{{ prefix_class }}badge {{ prefix_class }}badge--soldout'>{{ translation.products.product.sold_out }}</span>
        </div>
      {% endif %}
    </div>
  {% endif %}
</div>
