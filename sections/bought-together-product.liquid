                  action="{{ routes.cart_add_url }}"
                  accept-charset="UTF-8"
                  enctype="multipart/form-data"
                  novalidate="novalidate"
                  data-type="add-to-cart-form"
                >
                  <input type="hidden" name="form_type" value="product">
                  <input type="hidden" name="utf8" value="âœ“">
                  <div class="bought-together-products-list">
                    <div class="variant-select current-product" product-id="{{ product.id }}">
                      <input
                        type="hidden"
                        name="items[][id]"
                        value="{{ product.selected_or_first_available_variant.id }}"
                      >
                      <input type="hidden" name="items[][quantity]" class="quantity" value="1">
                    </div>

                    {%- for item in frequently_bought_products -%}
                      {% if item != blank and item.id != product.id %}
                        {%- liquid
                          assign product_available = item.variants | where: 'available'
                          assign loop_index = forloop.index
                        -%}
                        <div class="variant-select" product-id="{{ item.id }}">
                          {%- if item.variants.size > 1 -%}
                            {% for variant in product_available %}
                              {%- liquid
                                assign selected = false
                                assign quantity = variant.inventory_quantity
                              -%}
                              {% if quantity < 1 and variant.available == false %}
                                {% continue %}
                              {% else %}
                                {% assign selected = true %}
                                {% assign show_button_add_all = true %}
                              {% endif %}
                              <input
                                type="hidden"
                                name="items[][id]"
                                data-index="{{ loop_index }}"
                                value="{{ variant.id }}"
                              >
                              <input type="hidden" name="items[][quantity]" class="quantity" value="1">
                              {% if selected %}
                                {% break %}
                              {% endif %}
                            {% endfor %}
                          {%- else -%}
                            {%- if item.selected_or_first_available_variant.inventory_quantity > 0
                              or item.selected_or_first_available_variant.available == true
                            -%}
                              {% assign show_button_add_all = true %}
                              <input
                                type="hidden"
                                name="items[][id]"
                                data-index="{{ loop_index }}"
                                value="{{ item.selected_or_first_available_variant.id }}"
                              >
                              <input type="hidden" name="items[][quantity]" class="quantity" value="1">
                            {% endif %}
                          {% endif %}
                        </div>
                      {% endif %}
                    {%- endfor -%}
                  </div>
                  <div class="total-price mb-sp-6 heading-style hidden-mobile">
                    {%- liquid
                      assign savings_percent = 0
                      assign savings_amount = 0
                      if compare_at_price > 0
                        assign savings_amount = compare_at_price | minus: price
                        assign savings_percent = savings_amount | times: 100.0 | divided_by: compare_at_price | round
                        assign savings_percent_as_money = savings_percent | times: 100
                        assign display_percent = false
                        if savings_percent_as_money > savings_amount
                          assign display_percent = true
                        endif
                        if settings.currency_code_enabled
                          assign savings_amount_money = savings_amount | money_with_currency
                        else
                          assign savings_amount_money = savings_amount | money
                        endif
                      endif
                    -%}
                    {%- for item in frequently_bought_products -%}
                      {% if item != blank and item.id != product.id %}
                        {%- liquid
                          assign current_variant = item.selected_or_first_available_variant
                          assign price = current_variant.price | plus: price
                          if current_variant.compare_at_price != blank
                            assign compare_at_price = current_variant.compare_at_price | plus: compare_at_price
                          else
                            assign compare_at_price = current_variant.price | plus: compare_at_price
                          endif
                          if compare_at_price > 0
                            assign savings_amount = compare_at_price | minus: price
                            assign savings_percent = savings_amount | times: 100.0 | divided_by: compare_at_price | round
                            assign savings_percent_as_money = savings_percent | times: 100
                            assign display_percent = false
                            if savings_percent_as_money > savings_amount
                              assign display_percent = true
                            endif
                            if settings.currency_code_enabled
                              assign savings_amount_money = savings_amount | money_with_currency
                            else
                              assign savings_amount_money = savings_amount | money
                            endif
                          endif
                        -%}
                      {% endif %}
                    {%- endfor -%}
                    <h3 class="mb-sp-4 h6">
                      {{- 'products.product.total_price' | t -}}
                    </h3>
                    <div class="bundle-price flex gap-sp-1 content-center wrap">
                      <span class="price h5 {% if compare_at_price > 0 %}sale-color{% endif %}">
                        {%- if settings.currency_code_enabled %}
                          {{ price | money_with_currency }}
                        {% else %}
                          {{ price | money }}
                        {% endif -%}
                      </span>
                      {%- if compare_at_price > 0 -%}
                        <s class="compare-price grey-color text-size subheading_weight">
                          {%- if settings.currency_code_enabled -%}
                            {{ compare_at_price | money_with_currency }}
                          {%- else -%}
                            {{ compare_at_price | money }}
                          {%- endif -%}
                        </s>
                        <div class="saving-price saving-price-js product__badges flex">
                          <span
                            class="price-saving price-item compare-price product__badges-sale rounded fs-13 subheading_weight"
                            style="--badges-bg: {{ settings.sale_background }}; --badges-color: {{ settings.sale_color }}"
                          >
                            {% if display_percent %}
                              {{ 'products.product.sale_off' | t: discount: savings_percent }}
                            {% else %}
                              {{ 'products.product.sale_price' | t: price: savings_amount_money }}
                            {% endif %}
                          </span>
                        </div>
                      {%- endif -%}
                    </div>
                  </div>
                  {%- if show_button_add_all -%}
                    {%- liquid
                      assign price = product.selected_or_first_available_variant.price
                    -%}
                    {%- for item in frequently_bought_products -%}
                      {% if item != blank and item.id != product.id %}
                        {%- liquid
                          assign current_variant = item.selected_or_first_available_variant
                          assign price = current_variant.price | plus: price
                        -%}
                      {% endif %}
                    {%- endfor -%}
                    <button
                      type="submit"
                      name="add"
                      class="btn pointer btn-primary w-full relative product_submit_button product-form__submit word-wrap relative hidden block-md btn-count-js"
                      aria-label="{{ 'products.product.add_all_to_cart' | t }}"
                    >
                      <span class="btn-label hidden-on-load transition-short flex content-center">
                        {{ 'products.product.add_all_to_cart_html' | t: count: count }}
                      </span>
                      {%- render 'loader' -%}
                    </button>
                  {% endif %}
                </form>
              </product-form>
            </div>
          </div>
        </div>
