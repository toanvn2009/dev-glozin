              -%}
              {%- for item in frequently_bought_products -%}
                {% if item != blank and item.id != product.id %}
                  {%- liquid
                    assign current_variant = item.selected_or_first_available_variant
                    assign price = current_variant.price | plus: price
                  -%}
                {% endif %}
              {%- endfor -%}
              <button
                type="submit"
                name="add"
                class="btn pointer btn-primary w-full relative product_submit_button product-form__submit word-wrap relative btn-count-js"
                aria-label="{{ 'products.product.add_all_to_cart' | t }}"
              >
                <span class="btn-label hidden-on-load transition-short flex content-center">
                  {{ 'products.product.add_all_to_cart_html' | t: count: count }}
                  <span class="dot-total mx-8"> - </span>
                  <div class="total-price">
                    <span class="price">
                      {%- if settings.currency_code_enabled %}
                        {{ price | money_with_currency }}
                      {% else %}
                        {{ price | money }}
                      {% endif -%}
                    </span>
                  </div>
                </span>
                {%- render 'loader' -%}
              </button>
            {% endif %}
          </form>
        </product-form>
      </div>
    </bought-together-popup>
  </div>
{%- endif -%}
