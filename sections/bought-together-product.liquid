        data-price="{{ product.selected_or_first_available_variant.price }}"
        data-price-compare="{{ compare_at_price }}"
      >
        <div class="box-total col-md-w-custom w-full">
          <div class="sticky-md header-bought bg-secondary top-30 rounded p-sp-6 text-{{ text_alignment }}">
            <div class="w-full sf-prod__block info-bought-together">
              <product-form class="bought-together-products-form relative z-3 text-center">
