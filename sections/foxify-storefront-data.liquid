<script id='storefront-filters' type='application/json'>
  [
  {%- for filter in collection.filters -%}
    {% assign presentation = filter.presentation | default: 'text' %}
    {% case filter.type %}
      {% when 'price_range' %}
        { "type": "price_range", "presentation": {{ presentation | json }}, "title": {{ filter.label | json }}, "currency":
        {{ cart.currency.symbol | json }}, "range_max": {{ filter.range_max | money_without_currency | json }}, "range_min":
        {{ filter.min_value.value | default: 0.0 | money_without_currency | json }}},
      {% else %}
        { "type": {{ filter.type | json }}, "presentation": {{ presentation | json }}, "title": {{ filter.label | json }}, "options": [
        {%- for value in filter.values -%}
          {"label": {{ value.label | json }}, "count": {{ value.count | json }}}
          {%- unless forloop.last %},{% endunless -%}
        {%- endfor -%}
        ] }{% unless forloop.last %},{% endunless %}
    {% endcase %}
  {% endfor %}
  ]
</script>

