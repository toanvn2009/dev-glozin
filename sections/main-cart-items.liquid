                {%- endif -%}
                <form action="{{ routes.cart_url }}" method="POST">
                  <div class="cart__ctas gap-sp-2 pb-sp-4 pb-1025-24 hidden grid-1025">
                    <noscript>
                      <button type="submit" class="cart__update-button" form="cart">
                        {{ 'sections.cart.update' | t }}
                      </button>
                    </noscript>
                    <button
                      type="submit"
                      name="checkout"
                      class="grow-1 btn btn-primary"
                    >
                      <span class="hidden-on-load transition-short flex content-center gap-sp-2">
                        <svg width="21" height="20" viewBox="0 0 21 20" fill="none">
                          <use href="#icon-lock" />
                        </svg>
                        {{ 'sections.cart.checkout' | t -}}
                      </span>
                      {%- render 'loader' -%}
                    </button>
                    <div id="cart-errors" class="error empty-hidden"></div>
                  </div>
                </form>
                {%- if additional_checkout_buttons -%}
                  <div class="cart__dynamic-checkout-buttons additional-checkout-buttons mb-sp-5">
                    {{ content_for_additional_checkout_buttons }}
                  </div>
                {%- endif -%}
                {%- if shop.enabled_payment_types != empty -%}
                  <div class="cart-block text-center">
                    <p class="heading-color mb-sp-2">
                      {{ 'templates.cart.heading_payment' | t }}
                    </p>
                    <div class="content">
                      {%- if shop.enabled_payment_types != empty -%}
                        <ul class="list-unstyled flex wrap justify-center gap-5">
                          {%- for type in shop.enabled_payment_types -%}
                            <li class="lh-normal inline-flex align-center">
                              {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
                            </li>
                          {%- endfor -%}
                        </ul>
                      {% endif %}
                    </div>
                  </div>
                {% endif %}
              </div>
              {% if trust_badges %}
                <div
                  class="trust-badges bg-secondary rounded drawer-spacing mt-sp-6 gap{% if section_st.hide_check_badge_on_mobile %} hidden grid-1025{% else %} grid{% endif %}"
                  style="--padding-block-desktop: 4rem;--padding-inline-desktop: 4rem;--padding-block: var(--bs-gutter-x);--gap-desktop: var(--sp-6);--gap: var(--sp-6);"
                >
                  {%- for block in section.blocks -%}
                    {%- liquid
                      assign block_st = block.settings
                      assign icon_image = block_st.icon_image
                      assign icon_svg = block_st.icon_svg
                      assign heading = block_st.heading
                      assign description = block_st.description
                      assign icon_size = block_st.icon_size
                      assign icon_type = block_st.icon_type
                    -%}
                    {%- if block.type == 'trust-badges' -%}
                      <div class="icon-box__item flex gap-16">
                        <div class="icon-box__icon">
                          {% if icon_type == 'svg' and icon_svg != 'none' %}
                            {% render 'icon_svg_list',
                              icon: icon_svg,
                              custom_width: icon_size,
                              custom_height: icon_size
                            %}
                          {% elsif icon_type == 'image' and icon_image != blank %}
                            {%- liquid
                              assign alt_default = 'accessibility.promotion_banner' | t
                              assign alt = icon_image.alt | default: alt_default | escape
                            -%}
                            {% render 'responsive-image',
                              type: 'other',
                              image: icon_image,
                              image_alt: alt,
                              class: 'rounded-10'
                            %}
                          {% endif %}
                        </div>
                        <div class="icon-box__content" {{ block.shopify_attributes }}>
                          {%- if heading != blank -%}
                            <div
                              class="icon-box__heading h7 mb-sp-1 prose"
                            >
                              {{ block.settings.heading }}
                            </div>
                          {%- endif -%}
                          {%- if description != blank -%}
                            <div class="icon-box__description">
                              {{ block.settings.description }}
                            </div>
                          {%- endif -%}
                        </div>
                      </div>
                    {%- endif -%}
                  {%- endfor -%}
                </div>
              {% endif %}
            </div>
          </div>
        </main-cart>
      {% endif %}
    </div>
  </div>
</div>

