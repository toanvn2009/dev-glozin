{{ 'cart-page.css' | asset_url | stylesheet_tag }}
{{ 'countdown.css' | asset_url | stylesheet_tag }}
<script type="module" src="{{ 'cart-page.js' | asset_url }}" defer="defer"></script>
{% liquid
  assign theme_st = settings
  assign section_st = section.settings
  if section_st.section_width == 'fix_width'
    assign section_width = 'container'
  elsif section_st.section_width == 'full_width'
    assign section_width = 'full-width'
  else
    assign section_width = 'fluid_container'
  endif
  assign show_free_shipping_message = section_st.show_free_shipping_message
  assign show_cart_note = section_st.show_cart_note
  assign show_estimate_shipping = section_st.show_estimate_shipping
  assign show_gift_wrap = section_st.show_gift_wrap
  assign free_minimum_amount = theme_st.free_minimum_amount
  assign free_shipping_message = theme_st.free_shipping_message
  assign select_product_gift_wrap = theme_st.select_product_gift_wrap
  assign enable_product_recommendations = theme_st.enable_product_recommendations
  assign show_product_recommendations_mobile = theme_st.show_product_recommendations_mobile
  assign product_recommendations_heading = theme_st.product_recommendations_heading
  assign recommendation_product_type = theme_st.recommendation_product_type
  assign product_to_show = theme_st.product_to_show
  assign select_product_recommendation = theme_st.select_product_recommendation
  assign show_discount = section_st.show_discount
  assign cart_duration_show = theme_st.show_duration
  assign cart_duration = theme_st.cart_duration
  assign show_icon_with_text = false
  assign trust_badges = false
  for block in section.blocks
    case block.type
      when 'icon-with-text'
        assign show_icon_with_text = true
      when 'trust-badges'
        assign trust_badges = true
    endcase
  endfor
  assign total = cart.total_price | money
  assign discount_codes = cart.cart_level_discount_applications | where: 'type', 'discount_code' | map: 'title'
  for item in cart.items
    for allocation in item.line_level_discount_allocations
      if allocation.discount_application.type == 'discount_code'
        assign discount_codes = item.line_level_discount_allocations | slice: forloop.index0 | map: 'discount_application' | map: 'title' | concat: discount_codes
      endif
    endfor
  endfor
  assign discount_codes = discount_codes | uniq
%}
{%- capture style -%}
  --section-pt: {{ section_st.padding_top }}; --section-pb: {{ section_st.padding_bottom }};--gap-desktop: 6rem;--col-width: 32.4%;
{%- endcapture -%}
<div
  class="page-cart section pt-min color-{{ section_st.color_scheme }} gradient{% if cart == empty %} is-empty{% endif %}{% if request.path == "/cart" %} cart-page{% endif %}"
  id="MainCartItems"
  data-id="{{ section.id }}"
  style="{{ style | strip | strip_newlines }}"
>
  <div class="{{ section_width }}">
    <div class="main-cart__wrapper js-contents">
      {% if cart == empty %}
        <div class="cart__warnings text-center mt-50">
          <h2 class="cart__empty-title mb-sp-5">{{ 'sections.cart.empty' | t }}</h2>
          <a
            href="{{ routes.all_products_collection_url }}"
            class="btn btn-outline inline-block"
            aria-label="{{ 'general.continue_shopping' | t }}"
          >
            {{ 'general.continue_shopping' | t }}
          </a>
          {%- if shop.customer_accounts_enabled and customer == null -%}
            <h2 class="cart__login-title mt-50">
              {{ 'sections.cart.login.title' | t }}
            </h2>
            <p class="cart__login-paragraph">
              {{ 'sections.cart.login.paragraph_html' | t: link: routes.account_login_url }}
            </p>
          {%- endif -%}
        </div>
      {% else %}
        <div class="breadcrumbs mb-10">
          {%- render 'breadcrumbs' -%}
        </div>
        <div class="heading-block my-60">
          <h1 class="heading-letter-spacing title title--primary h0 text-center">
            {{ 'sections.cart.title' | t }}
          </h1>
          {% assign total_price = cart.total_price | times: 1 %}
          {%- if show_free_shipping_message and free_minimum_amount -%}
            <free-ship-progress-bar
              data-fe-unavailable="{% if free_shipping_message != blank %}{{ free_shipping_message }}{% else %}{{ 'sections.cart.free_shipping_html' | t }}{% endif %}"
              data-fe-available="{{ 'sections.cart.free_shipping_available' | t }}"
              class="free-shipping-bar mt-sp-4 mt-1025-24 pb-6 block"
            >
              <div class="progress-bar-message text-center">
                {{ free_shipping_message | replace: '[amount]', total }}
              </div>
              <div
                class="progress-bar rounded-10 clip-path-unset mx-auto w-full h-custom bg-border-color mt-sp-4 relative max-w-custom"
                style="--height: 4px;--max-width: 60rem"
              >
                <div
                  class="progress rounded-10 clip-path-unset h-custom absolute left-0 inset-y-0 transition"
                  style="width: var(--width); --width: 100%;"
                  data-total-order="{{ total_price }}"
                  data-fe-amount="{{ free_minimum_amount }}"
                ></div>
              </div>
            </free-ship-progress-bar>
          {%- endif -%}
          {%- if cart_duration_show and cart.items.size > 0 -%}
            <script src="{{ 'countdown-timer.js' | asset_url }}" defer="defer"></script>
            <div class="cart-countdown-time text-center mt-sp-4 mt-1025-24">
              <countdown-timer
                data-deadline-mins="{{ cart_duration }}"
                data-message="{{ 'sections.cart.timeout_message' | t }}"
                data-mins="{{ 'products.product.countdown.format.mins' | t }}"
                data-secs="{{ 'products.product.countdown.format.secs' | t }}"
                class="countdown-cart"
              >
                <span class="icon-fire">ðŸ”¥</span>
                <span class="heading-color">{{- 'sections.cart.countdown_cart_message_html' | t -}}</span>
                <div class="countdown-inner">
                  <div class="relative flex content-center bg-white countdown-container lh-normal sale-color min-w-custom p-custom rounded-5">
                    <span class="minutes_timer countdown-item">00</span>
                    <span class="hidden timer-announcementbar-text">
                      {{- 'products.product.countdown.format.mins' | t -}}
                    </span>
                  </div>
                  <div class="relative flex content-center bg-white countdown-container lh-normal sale-color min-w-custom p-custom rounded-5">
                    <span class="seconds_timer countdown-item">00</span>
                    <span class="hidden timer-announcementbar-text">
                      {{- 'products.product.countdown.format.secs' | t -}}
                    </span>
                  </div>
                </div>
              </countdown-timer>
            </div>
          {%- endif -%}
        </div>
        <main-cart
          class="main-cart flex-wrap flex-1025 gap-60 justify-between{% if cart == empty %} is-empty{% endif %}"
          data-section-id="{{ section.id }}"
        >
          <div class="cart-left mb-30 mb-1025-0 col-1025-remaining">
            <div class="sticky-1025 top-30">
              <div class="flex column-reverse column-1025 gap-30">
                {% if cart != empty %}
                  {% if show_icon_with_text %}
                    <div class="icon-with-text gap-20{% if section_st.hide_icon_with_text_on_mobile %} hidden flex-1025{% else %} flex-1025{% endif %}">
                      {%- for block in section.blocks -%}
                        {%- liquid
                          assign block_st = block.settings
                          assign icon_svg = block_st.icon_svg
                          assign heading = block_st.heading
                          assign icon_image = block_st.icon_image
                          assign icon_size = block_st.icon_size
                          assign icon_type = block_st.icon_type
                        -%}
                        {%- if block.type == 'icon-with-text' -%}
                          <div class="icon-box__item flex-1 flex align-center gap-10 bg-secondary rounded px-sp-5 py-15 py-1025-20 mb-10">
                            <div
                              class="icon-box__icon w-custom h-auto flex heading-color"
                              style="---width: {{ icon_size }}px; "
                            >
                              {% if icon_type == 'svg' and icon_svg != 'none' %}
                                {% render 'icon_svg_list',
                                  icon: icon_svg,
                                  custom_width: icon_size,
                                  custom_height: icon_size
                                %}
                              {% elsif icon_type == 'image' and icon_image != blank %}
                                {%- liquid
                                  assign alt_default = 'accessibility.promotion_banner' | t
                                  assign alt = icon_image.alt | default: alt_default | escape
                                -%}
                                {% render 'responsive-image',
                                  type: 'other',
                                  image: icon_image,
                                  image_alt: alt,
                                  class: 'rounded-10'
                                %}
                              {% endif %}
                            </div>
                            <div class="icon-box__content" {{ block.shopify_attributes }}>
                              {%- if heading != blank -%}
                                <div class="icon-box__heading prose">
                                  {{ block.settings.heading }}
                                </div>
                              {%- endif -%}
                            </div>
                          </div>
                        {%- endif -%}
                      {%- endfor -%}
                    </div>
                  {%- endif -%}
                {% endif %}
                <main-cart-items class="main-cart-items cart-content-items border-top block">
                  <form action="{{ routes.cart_url }}" class="cart__contents critical-hidden" method="post" id="cart">
                    <div class="cart-items">
                      {%- for item in cart.items -%}
                        <div
                          class="cart-item product__item border-bottom py-sp-4 py-1025-20 loading-smooth loading_snippet"
                          id="CartItem-{{ item.index | plus: 1 }}"
                        >
                          <div
                            class="cart__info-wrapper flex align-start align-1025-center gap"
                            style="--gap-desktop: 24px; --gap: 15px;"
                          >
                            {% if item.image %}
                              <div class="cart__image flex align-center gap-10">
                                <div class="hidden block-1025">
                                  <main-cart-remove-button
                                    id="Remove-{{ item.index | plus: 1 }}"
                                    data-index="{{ item.index | plus: 1 }}"
                                    data-product-id="{{ item.variant.id }}"
                                    class="loading-smooth loading_snippet"
                                  >
                                    <a
                                      href="{{ item.url_to_remove }}"
                                      class="button button--tertiary inline-flex align-center hover-icon-zoom relative w-custom flex-start col-md-w-custom h-30 mt-sp-2 not-highlight-tap"
                                      style="--width: 2rem;--col-width:3rem;"
                                      aria-label="{{ 'sections.cart.remove_title' | t }}"
                                    >
                                      <svg
                                        width="16"
                                        height="16"
                                        viewBox="0 0 20 20"
                                        fill="none"
                                        class="icon-zoom transition-short will-change text-color hidden-on-load"
                                      >
                                        <use href="#icon-trash-cart"/>
                                      </svg>
                                      <span class="capitalize currentColor lh-1 visually-hidden">
                                        {{- 'sections.cart.remove_title' | t -}}
                                      </span>
                                      <span
                                        class="icon-rotator absolute left-0 m-auto rounded-50 opacity-0 w-custom h-custom"
                                        style="--width: 1.5rem;--height: 1.5rem;"
                                      ></span>
                                    </a>
                                  </main-cart-remove-button>
                                  {%- unless item.product.has_only_default_variant -%}
                                    <main-cart-edit
                                      class="hover-icon-zoom btn-reset pointer mt-sp-2 h-30 flex relative main-cart-edit-loading flex-end flex-1025-start"
                                      data-href="{{ item.url }}"
                                      data-id="{{ item.id }}"
                                      data-key="{{ item.key }}"
                                      data-quantity="{{ item.quantity }}"
                                      tabindex="0"
                                      data-index="{{ item.index | plus: 1 }}"
                                    >
                                      <svg
                                        width="16"
                                        height="16"
                                        fill="none"
                                        class="icon-zoom will-change text-color hidden-on-load-edit transition-short"
                                      >
                                        <use href="#icon-edit"/>
                                      </svg>
                                      <span
                                        class="icon-rotator-edit absolute top-0 left-0 m-auto rounded-50 opacity-0 w-custom h-custom"
                                        style="--width: 1.5rem;--height: 1.5rem;"
                                      ></span>
                                    </main-cart-edit>
                                  {%- endunless -%}
                                </div>
                                <div class="cart-item__media w-custom" style="--width: 9rem;">
                                  {%- liquid
                                    assign ratio = ''
                                    if theme_st.product_image_ratio != 'adapt'
                                      case theme_st.product_image_ratio
                                        when 'square'
                                          assign ratio = '1/1'
                                        when 'landscape'
                                          assign ratio = '4/3'
                                        when 'portrait'
                                          assign ratio = '3/4'
                                      endcase
                                    else
                                      assign ratio = item.image.aspect_ratio
                                    endif
                                  -%}
                                  <div
                                    class="banner__media hover-effect rounded-10"
                                  >
                                    <a
                                      href="{{ item.url }}"
                                      class="cart-item__link product-image focus-inset block"
                                      style="--aspect-ratio: {{ ratio }}"
                                      tabindex="-1"
                                      aria-hidden="true"
                                      aria-label="{{ item.image.alt | escape }}"
                                    >
                                      {% render 'responsive-image',
                                        type: 'product',
                                        class: 'cart-item__image',
                                        custom_widths: '360, 160, 90',
                                        image: item.image,
                                        image_alt: item.image.alt,
                                        disable_lazy_loading: true
                                      %}
                                    </a>
                                  </div>
                                </div>
                              </div>
                            {% else %}
                              <div>
                                <main-cart-remove-button
                                  id="Remove-{{ item.index | plus: 1 }}"
                                  data-index="{{ item.index | plus: 1 }}"
                                  data-product-id="{{ item.variant.id }}"
                                >
                                  <a
                                    href="{{ item.url_to_remove }}"
                                    class="button button--tertiary inline-flex align-center hover-icon-zoom relative w-custom flex-start not-highlight-tap"
                                    style="--width: 2.7rem;"
                                    aria-label="{{ 'sections.cart.remove_title' | t }}"
                                  >
                                    <svg
                                      width="12"
                                      height="12"
                                      viewBox="0 0 12 12"
                                      fill="none"
                                      class="icon-remove-cart icon-zoom transition-short will-change text-color hidden-on-load transition-short"
                                    >
                                      <use href="#icon-close" />
                                    </svg>
                                    <span class="capitalize currentColor lh-1 visually-hidden">
                                      {{- 'sections.cart.remove_title' | t -}}
                                    </span>
                                    <span
                                      class="icon-rotator absolute left-0 rounded-50 opacity-0 w-custom h-custom"
                                      style="--width: 1.5rem;--height: 1.5rem;"
                                    ></span>
                                  </a>
                                </main-cart-remove-button>
                                {%- unless item.product.has_only_default_variant -%}
                                  <main-cart-edit
                                    class="hover-icon-zoom btn-reset pointer mt-sp-2 h-30 flex relative main-cart-edit-loading"
                                    data-href="{{ item.url }}"
                                    data-id="{{ item.id }}"
                                    data-key="{{ item.key }}"
                                    data-quantity="{{ item.quantity }}"
                                    tabindex="0"
                                    data-index="{{ item.index | plus: 1 }}"
                                  >
                                    <svg
                                      width="16"
                                      height="16"
                                      fill="none"
                                      class="icon-zoom will-change text-color hidden-on-load-edit transition-short"
                                    >
                                      <use href="#icon-edit"/>
                                    </svg>
                                    <span
                                      class="icon-rotator-edit absolute top-0 left-0 m-auto rounded-50 opacity-0 w-custom h-custom"
                                      style="--width: 1.5rem;--height: 1.5rem;"
                                    ></span>
                                  </main-cart-edit>
                                {%- endunless -%}
                              </div>
                            {% endif %}
                            <div
                              class="cart-item-info flex wrap nowrap-1025 gap-0 gap-1025-20 flex-1 align-center space-between"
                              style="--col-width: 51%;--gap-desktop: 20px;--gap: 10px;"
                            >
                              <div class="cart__product-name-price w-full col-1025-w-custom">
                                <a
                                  href="{{ item.url }}"
                                  class="product__cart-name heading-color lh-global"
                                  aria-label="{{ item.product.title | escape }}"
                                >
                                  {{- item.product.title | escape -}}
                                </a>
                                {%- if item.product.has_only_default_variant == false
                                  or item.properties.size != 0
                                  or item.selling_plan_allocation != null
                                -%}
                                  <div
                                    class="product_option-cart fs-small flex wrap gap-custom"
                                    style="--gap: 2px;"
                                  >
                                    {%- if item.product.has_only_default_variant == false -%}
                                      {%- for option in item.options_with_values -%}
                                        <div class="product-option">
                                          {{ option.name }}:
                                          {{ option.value -}}
                                          {%- unless forloop.last %} / {% endunless %}
                                        </div>
                                      {%- endfor -%}
                                    {%- endif -%}

                                    {%- for property in item.properties -%}
                                      {%- assign property_first_char = property.first | slice: 0 -%}
                                      {%- if property.last != blank and property_first_char != '_' -%}
                                        <div class="product-option">
                                          {%- if property.last contains '/uploads/' -%}
                                            <a
                                              href="{{ property.last }}"
                                              class="link"
                                              target="_blank"
                                              aria-describedby="a11y-new-window-message"
                                              aria-label="{{ property.last }}"
                                            >
                                              {{ property.last | split: '/' | last }}
                                            </a>
                                          {%- else -%}
                                            {{ property.last }}
                                          {%- endif -%}
                                        </div>
                                      {%- endif -%}
                                    {%- endfor -%}
                                  </div>
                                  <p class="product-option mt-sp-1">
                                    {{ item.selling_plan_allocation.selling_plan.name }}
                                  </p>
                                {%- endif -%}
                                {%- if item.original_price != item.final_price -%}
                                  <div class="cart-item__discounted-prices mt-sp-1">
                                    <span class="visually-hidden">
                                      {{ 'products.product.price.regular_price' | t }}
                                    </span>
                                    <s class="cart-item__old-price product-option">
                                      {{- item.original_price | money -}}
                                    </s>
                                    <span class="visually-hidden">
                                      {{ 'products.product.price.sale_price' | t }}
                                    </span>
                                    <strong class="cart-item__final-price product-option heading-color heading_weight sale-color">
                                      {{ item.final_price | money }}
                                    </strong>
                                  </div>
                                {%- else -%}
                                  <div class="heading-color mt-sp-1">
                                    {{ item.original_price | money }}
                                  </div>
                                {%- endif -%}
                                <ul
                                  class="discounts list-unstyled mt-sp-1"
                                  role="list"
                                  aria-label="{{ 'customer.order.discount' | t }}"
                                >
                                  {%- for discount in item.discounts -%}
                                    <li
                                      class="discounts__discount fs-13 py-sp-1 inline-flex align-center text-center bg-custom text-color px-sp-3 rounded"
                                      style="--bg-color-custom: #D9266B26;--color-text: #D9266B;--img-rounded: 3rem;"
                                      data-discount-code="{{ discount.title }}"
                                    >
                                      {{ discount.title }} (-{{ discount.amount | money }})
                                    </li>
                                  {%- endfor -%}
                                </ul>
                              </div>
                              <div class="flex grow-1 align-start align-1025-center space-between column-reverse row-1025 w-full gap-10 col-1025-remaining mt-sp-4 mt-1025-0">
                                <div class="cart-item__quantity-wrapper product-form__input product-form__quantity">
                                  <label class="visually-hidden" for="Quantity-{{ item.index | plus: 1 }}">
                                    {{ 'products.product.quantity.label' | t }}
                                  </label>
                                  <quantity-input
                                    id="Quantity-Form-{{ section.id }}"
                                    class="quantity cart-quantity input-rounded flex align-center input-style px-0"
                                  >
                                    <button
                                      class="quantity__button no-js-hidden relative flex align-center btn-reset ps-20 pe-10 pointer heading-color"
                                      name="minus"
                                      type="button"
                                    >
                                      <span class="visually-hidden border-0 p-0 text-center">
                                        {{-
                                          'products.product.quantity.decrease'
                                          | t: product: item.product.title
                                          | escape
                                        -}}
                                      </span>
                                      <svg
                                        width="9"
                                        height="2"
                                        viewBox="0 0 9 2"
                                        fill="none"
                                      >
                                        <use href="#icon-minus"></use>
                                      </svg>
                                    </button>
                                    <input
                                      class="quantity__input border-0 p-0 text-center w-custom heading-color"
                                      type="number"
                                      style="--input-height: auto;"
                                      type="number"
                                      data-quantity-variant-id="{{ item.variant.id }}"
                                      name="updates[]"
                                      value="{{ item.quantity }}"
                                      {% # theme-check-disable %}
                                      data-cart-quantity="{{ cart | item_count_for_variant: item.variant.id }}"
                                      min="{{ item.variant.quantity_rule.min }}"
                                      {% if item.variant.quantity_rule.max != null %}
                                        max="{{ item.variant.quantity_rule.max }}"
                                      {% endif %}
                                      step="{{ item.variant.quantity_rule.increment }}"
                                      {% # theme-check-enable %}
                                      aria-label="{{ 'products.product.quantity.input_label' | t: product: item.product.title | escape }}"
                                      id="Quantity-{{ item.index | plus: 1 }}"
                                      data-index="{{ item.index | plus: 1 }}"
                                    >
                                    <button
                                      class="quantity__button no-js-hidden relative flex align-center btn-reset ps-10 pe-20 pointer heading-color"
                                      name="plus"
                                      type="button"
                                    >
                                      <span class="visually-hidden">
                                        {{-
                                          'products.product.quantity.increase'
                                          | t: product: item.product.title
                                          | escape
                                        -}}
                                      </span>
                                      <svg width="9" height="10" viewBox="0 0 9 10" fill="none">
                                        <use href="#icon-plus"></use>
                                      </svg>
                                    </button>
                                  </quantity-input>
                                  <div
                                    class="cart-item__error"
                                    id="Line-item-error-{{ item.index | plus: 1 }}"
                                    role="alert"
                                  >
                                    <p
                                      class="cart-item__error-text error error-messeage mt-5 empty-hidden"
                                      style="--mes-padding-block: 0.8rem;"
                                    ></p>
                                  </div>
                                </div>
                                <div class="cart-item__price-wrapper heading-style text-end-1025 word-break grow-1 hidden block-1025">
                                  {%- if item.original_line_price != item.final_line_price -%}
                                    <div class="cart-item__discounted-prices">
                                      <span class="visually-hidden">
                                        {{ 'products.product.price.regular_price' | t }}
                                      </span>
                                      <s class="cart-item__old-price price price--end product-option text-color body_weight">
                                        {{- item.original_line_price | money -}}
                                      </s>
                                      <span class="visually-hidden">
                                        {{ 'products.product.price.sale_price' | t }}
                                      </span>
                                      <span class="price price--end sale-color">
                                        {{ item.final_line_price | money }}
                                      </span>
                                    </div>
                                  {%- else -%}
                                    <span class="visually-hidden">
                                      {{ 'products.product.price.regular_price' | t }}
                                    </span>
                                    <span class="price price--end">
                                      {{ item.original_line_price | money }}
                                    </span>
                                  {%- endif -%}
                                  {%- if item.variant.available and item.unit_price_measurement -%}
                                    <small class="unit-price caption block">
                                      <span class="visually-hidden">
                                        {{- 'products.product.price.unit_price' | t -}}
                                      </span>
                                      {{ item.variant.unit_price | money }}
                                      <span aria-hidden="true">/</span>
                                      <span class="visually-hidden"
                                        >&nbsp;{{ 'accessibility.unit_price_separator' | t }}&nbsp;</span
                                      >
                                      {%- if item.variant.unit_price_measurement.reference_value != 1 -%}
                                        {{- item.variant.unit_price_measurement.reference_value -}}
                                      {%- endif -%}
                                      {{ item.variant.unit_price_measurement.reference_unit }}
                                    </small>
                                  {%- endif -%}
                                </div>
                              </div>
                            </div>
                            <div class="block hidden-1025 me-5">
                              <main-cart-remove-button
                                id="Remove-{{ item.index | plus: 1 }}"
                                data-index="{{ item.index | plus: 1 }}"
                                data-product-id="{{ item.variant.id }}"
                              >
                                <a
                                  href="{{ item.url_to_remove }}"
                                  class="button button--tertiary inline-flex align-center hover-icon-zoom relative w-custom col-md-w-custom h-30 touch-target-before relative flex-end not-highlight-tap"
                                  style="--width: 2rem;--col-width: 4rem;"
