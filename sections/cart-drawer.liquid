{{ 'countdown.css' | asset_url | stylesheet_tag }}
{% liquid
  assign theme_st = settings
  assign section_st = section.settings
  assign show_free_shipping_message = section_st.show_free_shipping_message
  assign show_cart_note = section_st.show_cart_note
  assign show_estimate_shipping = section_st.show_estimate_shipping
  assign show_gift_wrap = section_st.show_gift_wrap
  assign show_discount = section_st.show_discount
  assign cart_empty_collection = theme_st.cart_empty_collection
  assign cart_empty_button_label = theme_st.cart_empty_button_label
  assign cart_empty_button_link = theme_st.cart_empty_button_link
  assign cart_empty_free_shipping_message = theme_st.cart_empty_free_shipping_message
  assign free_minimum_amount = theme_st.free_minimum_amount
  assign free_shipping_message = theme_st.free_shipping_message
  assign select_product_gift_wrap = theme_st.select_product_gift_wrap
  assign enable_product_recommendations = theme_st.enable_product_recommendations
  assign show_product_recommendations_mobile = theme_st.show_product_recommendations_mobile
  assign product_recommendations_heading = theme_st.product_recommendations_heading
  assign recommendation_product_type = theme_st.recommendation_product_type
  assign product_to_show = theme_st.product_to_show
  assign select_product_recommendation = theme_st.select_product_recommendation
  assign action_add_cart_desktop = theme_st.action_add_cart_desktop
  assign open_cart_mobile = theme_st.open_cart_mobile
  assign cart_duration_show = theme_st.show_duration
  assign cart_duration = theme_st.cart_duration
  assign discount_codes = cart.cart_level_discount_applications | where: 'type', 'discount_code' | map: 'title'
  for item in cart.items
    for allocation in item.line_level_discount_allocations
      if allocation.discount_application.type == 'discount_code'
        assign discount_codes = item.line_level_discount_allocations | slice: forloop.index0 | map: 'discount_application' | map: 'title' | concat: discount_codes
      endif
    endfor
  endfor
  assign discount_codes = discount_codes | uniq
%}
{% style %}
  .drawer__empty-collections .collection-item__description {
    opacity: 0.8;
  }
{% endstyle %}
{%- if cart_duration_show -%}
  <script src="{{ 'countdown-timer.js' | asset_url }}" defer="defer"></script>
{%- endif -%}
{%- if request.page_type != 'cart' -%}
  <cart-drawer
    id="{{ section.id }}"
    class="cart-drawer block modal invisible transition-drawer fixed inset-0 z-15 active-modal-js content-hidden"
    data-section-id="{{ section.id }}"
    data-action-add-cart-desktop="{{ action_add_cart_desktop }}"
    data-open-cart-mobile="{{ open_cart_mobile }}"
    drawer
  >
    <modal-overlay class="modal-overlay"></modal-overlay>
    <div
      class="modal-inner draw-mb drawer-right-mb color-default transition-drawer drawer drawer-right fixed right-0 inset-y-0 z-2 w-full"
      role="dialog"
      aria-modal="true"
      aria-label="{{ 'sections.cart.title' | t }}"
      tabindex="-1"
    >
      <div class="drawer__body overflow-y-auto custom-scrollbar h-full flex column bg-white rounded-start overflow-x-hidden">
        <draggable-modal
          class="drawer__header draggable-modal drawer__header-cart flex gap-10 space-between align-center drawer-spacing border-bottom sticky{% if open_cart_mobile ==  'drawer' %} hidden-drag{% endif %}"
          style="--padding-block-desktop: 1.7rem;--padding-inline-desktop:3.2rem;--padding-block:1.2rem;"
        >
          <div class="drawer__heading h5 flex gap align-center" style="--gap-desktop: 8px;--gap: 8px">
            {{ 'sections.cart.title' | t }}
            <span
              class="cart-count w-custom h-custom rounded-50 bg-custom fs-12 fw-500 inline-flex content-center"
              style="--width: 2.3rem; --height: 2.3rem;--bg-color-custom: var(--btn-primary-bg-color);"
            >
              {%- if cart.item_count < 100 -%}
                {{- cart.item_count -}}
              {%- else -%}
                ~
              {%- endif -%}
            </span>
          </div>
          <button
            is="button-close-model"
            class="modal__close pointer modal-button-close rounded-50 btn-reset h-full flex content-center"
            aria-label="Close"
          >
            <svg
              width="12"
              height="12"
              viewBox="0 0 14 14"
              fill="none"
              class="transition-short will-change icon-zoom"
            >
              <use href="#icon-close"></use>
            </svg>
          </button>
        </draggable-modal>
        {%- if cart == empty -%}
          {% liquid
            assign cart_empty_heading = 'sections.cart.empty' | t
            assign cart_empty_heading = theme_st.cart_empty_heading | default: cart_empty_heading | escape
            assign cart_empty_description = 'sections.cart.description' | t
            assign cart_empty_description = theme_st.cart_empty_description | default: cart_empty_description | escape
          %}
          <div
            class="drawer__inner-empty flex column flex-1 overflow-auto"
          >
            <div class="cart-drawer__warnings word-break flex column align-center py-60 grow-1 drawer-spacing custom-scrollbar overflow-auto fadeIn">
              <div class="drawer__empty-heading h5 mb-10 text-center">
                {{ cart_empty_heading }}
              </div>
              <div class="drawer__empty-description text-center">
                {{ cart_empty_description }}
              </div>
              {%- if cart_empty_collection != blank -%}
                <ul class="drawer__empty-collections list-unstyled flex column gap-15 w-full mt-30 mt-1025-sp-10">
                  {% for collection in cart_empty_collection %}
                    {% liquid
                      assign collection_media = collection.featured_image
                      assign collection_alt = collection.featured_image.alt | default: collection.title
                      if collection.metafields.custom.collection_empty.value.collection_image
                        assign collection_media = collection.metafields.custom.collection_empty.value.collection_image
                      endif
                    %}
                    <li
                      class="w-full"
                      style="--color-text: {{ theme_st.overlay_image_color }};--color-heading: {{ theme_st.overlay_image_color }};"
                    >
                      <a
                        class="collection-item__media--ratio relative hover-effect{% if collection_media %} w-full flex align-end rounded{% endif %}"
                        {% if collection_media %}
                          style="--aspect-ratio: 20/7;"
                        {% endif %}
                        draggable="false"
                        href="{{ collection.url }}"
                        aria-label="{{- collection.title -}}"
                      >
                        {%- if collection_media -%}
                          <div class="rounded inset-0 absolute" style="--aspect-ratio: 20/7;">
                            {% render 'responsive-image',
                              type: 'other',
                              image: collection_media,
                              image_alt: collection_alt
                            %}
                          </div>
                        {%- endif -%}
                        <div class="collection_info relative z-1 w-full flex gap-10 space-between align-center{% if collection_media %} p-gutter-x{% endif %}">
                          <div class="collection-item__info">
                            <p class="h6">{{- collection.title -}}</p>
                            {% if collection.metafields.custom.collection_empty.value.collection_description != blank %}
                              <span class="collection-item__description text-color">
                                {{- collection.metafields.custom.collection_empty.value.collection_description -}}
                              </span>
                            {%- endif -%}
                          </div>
                          {%- if collection_media -%}
                            <span
                              class="collection-list__icon wh-1025-50 w-custom h-custom flex content-center bg-white blur rounded-50 text-color btn-hover pointer overflow-hidden transition-short flex-auto"
                              style="--width:4.6rem;--height:4.6rem;--btn-primary-hover-color: rgb(var(--color-white));"
                            >
                              <svg width="6" height="11" viewBox="0 0 6 11" fill="none">
                                <use href="#icon-next"></use>
                              </svg>
                            </span>
                          {%- endif -%}
                        </div>
                      </a>
                    </li>
                  {% endfor %}
                </ul>
              {%- endif -%}
            </div>
            <div class="cart-drawer__footer drawer-spacing border-top">
              {%- if cart_empty_button_label -%}
                <div class="cart-empty-button">
                  <a
                    href="{{ cart_empty_button_link | default : "/collections/all" }}"
                    arial-label="{{ cart_empty_button_label }}"
                    class="block w-full btn pointer btn-primary text-center"
                  >
                    {{- cart_empty_button_label -}}
                  </a>
                </div>
              {%- endif -%}
              {%- if show_free_shipping_message and free_minimum_amount and cart_empty_free_shipping_message -%}
                <div class="cart-drawer__empty-message text-center mt-10 mt-1025-20 heading-color">
                  <free-ship-progress-bar
                    data-fe-amount="{{ free_minimum_amount }}"
                    data-empty-unavailable="{{ cart_empty_free_shipping_message }}"
                  >
                  </free-ship-progress-bar>
                </div>
              {%- endif -%}
            </div>
          </div>
        {%- else -%}
          <div class="overflow-y-auto custom-scrollbar grow-1 flex column">
            {% assign total_price = cart.total_price | times: 1 %}
            {%- if show_free_shipping_message and free_minimum_amount -%}
              <free-ship-progress-bar
                data-fe-unavailable="{% if free_shipping_message != blank %}{{ free_shipping_message }}{% else %}{{ 'sections.cart.free_shipping_html' | t }}{% endif %}"
                data-fe-available="{{ 'sections.cart.free_shipping_available' | t }}"
                class="free-shipping-bar drawer-spacing pt-sp-4"
                style="--padding-block-desktop: 2rem;--padding-block: 1.6rem;--padding-inline-desktop: 3.2rem;"
              >
                <div class="progress-bar-message text-center mb-sp-2 mb-1025-sp-3"></div>
                <div
                  class="progress-bar rounded-10 clip-path-unset h-custom bg-border-color relative"
                  style="--height: 4px;"
                >
                  <div
                    class="progress rounded-10 clip-path-unset h-custom absolute left-0 inset-y-0 transition"
                    data-total-order="{{ total_price }}"
                    data-fe-amount="{{ free_minimum_amount }}"
                  ></div>
                </div>
              </free-ship-progress-bar>
            {%- endif -%}
            {%- if cart_duration_show and cart.items.size > 0 -%}
              <div
                class="cart-countdown-time drawer-spacing mt-0 mt-1025-6"
                style="--padding-block: 0rem;--padding-block-desktop: 0rem;"
              >
                <div class="pb-sp-4 pb-1025-20 mb-sp-1 mb-1025-0 border-bottom-dashed lh-normal">
                  <countdown-timer
                    data-deadline-mins="{{ cart_duration }}"
                    data-message="{{ 'sections.cart.timeout_message' | t }}"
                    data-mins="{{ 'products.product.countdown.format.mins' | t }}"
                    data-secs="{{ 'products.product.countdown.format.secs' | t }}"
                    class="countdown-cart"
                  >
                    <span class="icon-fire">🔥</span>
                    <span>{{- 'sections.cart.countdown_message_html' | t -}}</span>
                    <div class="countdown-inner">
                      <div class="relative flex content-center bg-white countdown-container lh-normal sale-color min-w-custom p-custom rounded-5">
                        <span class="minutes_timer countdown-item">00</span>
                        <span class="timer-announcementbar-text">
                          {{- 'products.product.countdown.format.mins' | t -}}
                        </span>
                      </div>
                      <div class="relative flex content-center bg-white countdown-container lh-normal sale-color min-w-custom p-custom rounded-5">
                        <span class="seconds_timer countdown-item">00</span>
                        <span class="timer-announcementbar-text">
                          {{- 'products.product.countdown.format.secs' | t -}}
                        </span>
                      </div>
                    </div>
                  </countdown-timer>
                </div>
              </div>
            {%- endif -%}
            <div class="cart-drawer-inner grow-1 flex column">
              <cart-items
                class="block drawer-spacing grow-1 pt-0 cart-content-items"
                style="--padding-block: 0rem;--padding-block-desktop: 0rem;--padding-inline-desktop: 3.2rem;"
              >
                <form
                  action="{{ routes.cart_url }}"
                  id="CartDrawer-Form"
                  class="cart__contents cart-drawer__form"
                  method="post"
                >
                  <div id="CartDrawer-CartErrors" class="error error-messeage empty-hidden mb-15" role="alert"></div>
                  <div id="CartDrawer-CartItems" class="drawer__contents js-contents">
                    {%- if cart != empty -%}
                      <div class="drawer__cart-items-wrapper">
                        <div class="cart-items">
                          {%- for item in cart.items -%}
                            <div
                              id="CartDrawer-Item-{{ item.index | plus: 1 }}"
                              class="cart-item loading_snippet product__item py-sp-4 py-1025-20{% if forloop.last != true %} border-bottom-dashed {% endif %}{% if forloop.last == true %} pb-0{% endif %}"
                            >
                              <div class="cart-item_inner flex gap-16 transition {% if show_product_recommendations_mobile == false %} pb-sp-4 pb-1025-0{% endif %}">
                                {% if item.image %}
                                  <div
                                    class="cart-item__media flex-auto w-custom hover-effect"
                                    style="--width: 9rem;"
                                  >
                                    {%- liquid
                                      assign ratio = ''
                                      if theme_st.product_image_ratio != 'adapt'
                                        case theme_st.product_image_ratio
                                          when 'square'
                                            assign ratio = '1/1'
                                          else
                                            assign ratio = '3/4'
                                        endcase
                                      else
                                        assign ratio = item.image.aspect_ratio
                                      endif
                                    -%}
                                    <a
                                      href="{{ item.url }}"
                                      class="cart-item__link block rounded-10 focus-inset-inside word-break align-self-start"
                                      arial-label="{{ item.product.title | escape }}"
                                    >
                                      <div
                                        class="banner__media"
                                        style="--aspect-ratio: {{ ratio }}"
                                      >
                                        {% render 'responsive-image',
                                          type: 'product',
                                          class: 'cart-item__image',
                                          custom_widths: '360, 160, 90',
                                          image: item.image,
                                          image_alt: item.image.alt,
                                          disable_lazy_loading: true
                                        %}
                                      </div>
                                    </a>
                                  </div>
                                {% endif %}
                                <div
                                  class="cart-item__details-info product-motion-info flex column{% if item.image %} flex-1 w-custom{% else %} flex-1{% endif %}"
                                  style="--width: calc(100% - 11rem);"
                                >
                                  <div
                                    class="cart-item-info"
                                    arial-label=" {{- item.product.title | escape -}}"
                                  >
                                    <div class="flex gap-10 space-between mb-sp-1">
                                      <a
                                        href="{{ item.url }}"
                                        class="lh-global heading-color"
                                        arial-label="{{ item.product.title | escape }}"
                                      >
                                        <span class="outlined-border word-break">
                                          {{- item.product.title | escape -}}
                                        </span>
                                      </a>
                                      <cart-remove-button
                                        id="CartDrawer-Remove-{{ item.index | plus: 1 }}"
                                        data-index="{{ item.index | plus: 1 }}"
                                        data-product-id="{{ item.variant.id }}"
                                        class="flex justify-end"
                                      >
                                        <button
                                          type="button"
                                          class="btn-reset pointer inline-flex align-center flex-end w-30 pointer hover-icon-zoom relative not-highlight-tap"
                                          aria-label="{{- 'sections.cart.remove_title' | t: title: item.title -}}"
                                        >
                                          <svg
                                            width="16"
                                            height="16"
                                            viewBox="0 0 20 20"
                                            fill="none"
                                            class="icon-zoom transition-short will-change text-color hidden-on-load transition-short"
                                          >
                                            <use href="#icon-trash-cart"/>
                                          </svg>
                                          <span class="capitalize currentColor lh-1 visually-hidden">
                                            {{- 'sections.cart.remove_title' | t: title: item.title -}}
                                          </span>
                                          <span
                                            class="icon-rotator absolute top-5 right-0 rounded-50 opacity-0 w-custom h-custom"
                                            style="--width: 1.5rem;--height: 1.5rem;"
                                          ></span>
                                        </button>
                                      </cart-remove-button>
                                    </div>
                                    {%- if item.product.has_only_default_variant == false
                                      or item.properties.size != 0
                                      or item.selling_plan_allocation != null
                                    -%}
                                      <div
                                        class="product_option-cart fs-small flex wrap gap mb-sp-1"
                                        style="--gap: 2px;"
                                      >
                                        {%- if item.product.has_only_default_variant == false -%}
                                          {%- for option in item.options_with_values -%}
                                            <div class="product-option">
                                              {{ option.name }}: {{ option.value -}}
                                              {%- unless forloop.last %} / {% endunless %}
                                            </div>
                                          {%- endfor -%}
                                        {%- endif -%}

                                        {%- for property in item.properties -%}
                                          {%- assign property_first_char = property.first | slice: 0 -%}
                                          {%- if property.last != blank and property_first_char != '_' -%}
                                            <div class="product-option">
                                              {%- if property.last contains '/uploads/' -%}
                                                <a
                                                  href="{{ property.last }}"
                                                  class="link"
                                                  target="_blank"
                                                  aria-describedby="a11y-new-window-message"
                                                >
                                                  {{ property.last | split: '/' | last }}
                                                </a>
                                              {%- else -%}
                                                {{ property.last }}
                                              {%- endif -%}
                                            </div>
                                          {%- endif -%}
                                        {%- endfor -%}
                                      </div>
                                      <p class="product-option fs-small">
                                        {{ item.selling_plan_allocation.selling_plan.name }}
                                      </p>
                                    {%- endif -%}
                                    {%- if item.original_price != item.final_price -%}
                                      <div class="cart-item__discounted-prices">
                                        <span class="visually-hidden">
                                          {{ 'products.product.price.sale_price' | t }}
                                        </span>
                                        <strong class="cart-item__final-price product-option heading-color sale-color">
                                          {{ item.final_price | money }}
                                        </strong>
                                        <span class="visually-hidden">
                                          {{ 'products.product.price.regular_price' | t }}
                                        </span>
                                        <s class="cart-item__old-price product-option">
                                          {{- item.original_price | money -}}
                                        </s>
                                      </div>
                                    {%- else -%}
                                      <div class="heading-color lh-normal mt-6">
                                        {{ item.original_price | money }}
                                      </div>
                                    {%- endif -%}
                                    {%- if item.variant.available and item.unit_price_measurement -%}
                                      <small class="unit-price caption">
                                        <span class="visually-hidden">
                                          {{- 'products.product.price.unit_price' | t -}}
                                        </span>
                                        {{ item.variant.unit_price | money }}
                                        <span aria-hidden="true">/</span>
                                        <span class="visually-hidden"
                                          >&nbsp;{{ 'accessibility.unit_price_separator' | t }}&nbsp;</span
                                        >
                                        {%- if item.variant.unit_price_measurement.reference_value != 1 -%}
                                          {{- item.variant.unit_price_measurement.reference_value -}}
                                        {%- endif -%}
                                        {{ item.variant.unit_price_measurement.reference_unit }}
                                      </small>
                                    {%- endif -%}
                                    <ul
                                      class="discounts list-unstyled mt-sp-1"
                                      role="list"
                                      aria-label="{{ 'customer.order.discount' | t }}"
                                    >
                                      {%- for discount in item.discounts -%}
                                        <li
                                          class="discounts__discount fs-13 py-sp-1 inline-flex align-center text-center bg-custom text-color px-sp-3 rounded"
                                          style="--bg-color-custom: #D9266B26;--color-text: #D9266B;--img-rounded: 3rem;"
                                          data-discount-code="{{ discount.title }}"
                                        >
                                          {{ discount.title }} (-{{ discount.amount | money }})
                                        </li>
                                      {%- endfor -%}
                                    </ul>
                                  </div>
                                  <div class="cart-item__quantity-wrapper flex wrap grow-1 bottom-left w-full fs-small mt-sp-4">
                                    <label class="visually-hidden" for="Drawer-quantity-{{ item.index | plus: 1 }}">
                                      {{- 'products.product.quantity.label' | t -}}
                                    </label>
                                    <quantity-input
                                      class="quantity cart-quantity input-rounded flex input-style px-0"
                                      style="--input-height: 40px;"
                                    >
                                      <button
                                        class="quantity__button flex align-center btn-reset ps-16 pe-16 pointer heading-color"
                                        name="minus"
                                        type="button"
                                      >
                                        <span class="visually-hidden border-0 p-0 text-center">
                                          {{-
                                            'products.product.quantity.decrease'
                                            | t: product: item.product.title
                                            | escape
                                          -}}
                                        </span>
                                        <svg width="10" height="2" viewBox="0 0 10 2" fill="none">
                                          <use href="#icon-minus"></use>
                                        </svg>
                                      </button>
                                      <input
                                        class="quantity__input border-0 p-0 text-center w-custom fs-small heading-color"
                                        type="number"
                                        style="--width: 2.2rem;--input-height: 38px;"
                                        type="number"
                                        data-quantity-variant-id="{{ item.variant.id }}"
                                        name="updates[]"
                                        value="{{ item.quantity }}"
                                        {% # theme-check-disable %}
                                        data-cart-quantity="{{ cart | item_count_for_variant: item.variant.id }}"
                                        min="{{ item.variant.quantity_rule.min }}"
                                        {% if item.variant.quantity_rule.max != null %}
                                          max="{{ item.variant.quantity_rule.max }}"
                                        {% endif %}
                                        step="{{ item.variant.quantity_rule.increment }}"
                                        {% # theme-check-enable %}
                                        aria-label="{{ 'products.product.quantity.input_label' | t: product: item.product.title | escape }}"
                                        id="Drawer-quantity-{{ item.index | plus: 1 }}"
                                        data-index="{{ item.index | plus: 1 }}"
                                      >
                                      <button
                                        class="quantity__button flex align-center btn-reset ps-17 pe-17 pointer heading-color"
                                        name="plus"
                                        type="button"
                                      >
                                        <span class="visually-hidden">
                                          {{-
                                            'products.product.quantity.increase'
                                            | t: product: item.product.title
                                            | escape
                                          -}}
                                        </span>
                                        <svg width="10" height="10" viewBox="0 0 10 12" fill="none">
                                          <use href="#icon-plus"></use>
                                        </svg>
                                      </button>
                                    </quantity-input>
                                    <div
                                      id="CartDrawer-LineItemError-{{ item.index | plus: 1 }}"
                                      class="cart-item__error w-full relative"
                                      role="alert"
                                    >
                                      <p
                                        class="cart-item__error-text error error-messeage mt-5 empty-hidden"
                                        style="--mes-padding-block: 0.8rem;"
                                      ></p>
                                    </div>
                                  </div>
                                </div>
                              </div>
                            </div>
                          {%- endfor -%}
                        </div>
                      </div>
                    {%- endif -%}
                    <p id="CartDrawer-LiveRegionText" class="visually-hidden" role="status"></p>
                    <p id="CartDrawer-LineItemStatus" class="visually-hidden" aria-hidden="true" role="status">
                      {{ 'accessibility.loading' | t }}
                    </p>
                  </div>
                </form>
              </cart-items>
              {%- if enable_product_recommendations -%}
                <div class="drawer__cart-recommendations cart-recommendationmmendation drawer-left drawer-spacing beside {% if show_product_recommendations_mobile == false %} hidden-mobile{% endif %}">
                  <mini-cart-recommendations
                    class="swiper__controls-group"
                    style="--position-arrow: static;--swiper-navigation-size: 20px;--padding: 0;"
                    data-type="{{ recommendation_product_type }}"
                    data-url="{{ routes.product_recommendations_url }}?product_id={{ cart.items.first.product_id }}&limit={{ product_to_show }}&section_id=main-cart-upsell"
                  >
                    {% if product_recommendations_heading != blank %}
                      <div class="flex gap-10 align-center space-between mb-sp-3">
                        <h4 class="cart-recommendations-title fs-20">
                          {{ product_recommendations_heading }}
                        </h4>
                        {%- render 'swiper-navigation',
                          navigation_custom: true,
                          type: 'custom_nav',
                          class-custom: 'flex align-center gap-sp-2 heading-color'
                        -%}
                      </div>
                    {%- endif -%}
                    <div class="main-cart-upsell-product">
                      <slide-section
                        class="swiper"
                        data-section-id="{{ section.id }}"
                        data-autoplay="false"
                        data-effect="slide"
                        data-loop="false"
                        data-speed="300"
                        data-pagination="custom"
                        data-spacing="20"
                        data-mobile="1"
                        data-desktop="1"
                        data-tablet="1"
                      >
                        <div class="swiper-wrapper" style="--width:6rem;">
                          {%- if recommendation_product_type != 'auto' -%}
                            {%- for item in select_product_recommendation -%}
                              {% liquid
                                assign hidden = false
                                for item_cart in cart.items
                                  if item_cart.product_id == item.id
