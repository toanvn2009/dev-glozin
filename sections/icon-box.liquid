    {
      "type": "select",
      "id": "icon_position",
      "options": [
        {
          "value": "top",
          "label": "t:sections.all.image.desktop_position.top"
        },
        {
          "value": "bottom",
          "label": "t:sections.all.image.desktop_position.bottom"
        }
      ],
      "default": "top",
      "label": "t:sections.icon-box.settings.icon_settings.icon_position.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.content_setting.label"
    },
    {
      "type": "select",
      "id": "content_icon_alignment",
      "options": [
        {
          "value": "start",
          "label": "t:sections.all.text_alignment.options__1.label"
        },
        {
          "value": "center",
          "label": "t:sections.all.text_alignment.options__2.label"
        },
        {
          "value": "end",
          "label": "t:sections.all.text_alignment.options__3.label"
        }
      ],
      "default": "center",
      "label": "t:sections.all.text_alignment.alignment"
    },
    {
      "type": "select",
      "id": "content_icon_size",
      "options": [
        {
          "value": "small",
          "label": "t:sections.all.content_header.heading_size.small.label"
        },
        {
          "value": "medium",
          "label": "t:sections.all.content_header.heading_size.base.label"
        },
        {
          "value": "large",
          "label": "t:sections.all.content_header.heading_size.large.label"
        }
      ],
      "default": "medium",
      "label": "t:sections.all.content_header.heading_size.size"
    },
    {
      "type": "header",
      "content": "t:sections.all.mobile_options.label"
    },
    {
      "type": "checkbox",
      "id": "enable_carousel_mobile",
      "default": true,
      "label": "t:sections.all.carousel.enable_carousel_mobile.label"
    },
    {
      "type": "select",
      "id": "items_per_row",
      "label": "t:sections.all.items.items_per_row",
      "options": [
        {
          "value": "1",
          "label": "1"
        },
        {
          "value": "2",
          "label": "2"
        }
      ],
      "default": "1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
