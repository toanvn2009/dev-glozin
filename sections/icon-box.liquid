  "presets": [
    {
      "name": "t:sections.icon-box.name",
      "category": "t:sections.group.storytelling",
      "blocks": [
        {
          "type": "icon_box"
        },
        {
          "type": "icon_box"
        },
        {
          "type": "icon_box"
        }
      ]
    }
  ]
