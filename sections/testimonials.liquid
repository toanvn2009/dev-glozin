{%- liquid
  assign theme_st = settings
  assign section_st = section.settings
  assign scroll_animation = theme_st.scroll_animation
  if section_st.section_width == 'fix_width'
    assign section_width = 'container'
  elsif section_st.section_width == 'full_width'
    assign section_width = 'full-width'
  else
    assign section_width = 'fluid_container'
  endif

  assign heading_size = section_st.heading_size
  assign show_pagination = section_st.show_pagination
  assign show_navigation = section_st.show_navigation
  assign slide_auto_change = section_st.slide_auto_change
  assign change_slide_every = section_st.change_slide_every
  assign heading = section_st.title
  assign drawn_underline = section_st.drawn_underline
  assign drawn_underline_type = section_st.drawn_underline_type
  assign drawn_underline_color = section_st.drawn_underline_color
  if drawn_underline
    assign scroll_animation = 'disable'
  endif
  assign header_size = ''
  if heading_size == 'small'
    assign header_size = 'h3'
  elsif heading_size == 'large'
    assign header_size = 'h1'
  endif
  assign animate_delay = 25
-%}
{%- capture style -%}
  --section-pt: {{ section_st.padding_top }}; --section-pb: {{ section_st.padding_bottom }};--max-width: {{ section_st.content_max_width }}%;--item-width: {{ section_st.image_width }}px; --item-count: {{ section.blocks.size }};
{%- endcapture -%}
{% style %}
  testimonials-thumb .swiper-slide:not(.swiper-slide-thumb-active) {
    opacity: 0.4;
  }
  testimonials-thumb {
    width: calc(var(--item-count) * var(--item-width) + (var(--item-count) - 1) * 60px);
    max-width: 100%;
  }
  .testimonials-quote {
    --font-size: 26;
  }
  @media screen and (max-width: 767.98px) {
    .testimonials-quote {
      --font-size: 20;
    }
  }
{% endstyle %}
<div
  class="section color-{{ section_st.color_scheme }} gradient{% if section_st.show_divider %} border-top{% endif %}"
  style="{{ style | strip | strip_newlines }}"
>
  <div class="{{ section_width }}">
    {%- if section.settings.title != blank
      or section.settings.description != blank
      or section.settings.subheading != blank
    -%}
      <div class="section-header section-header__in-section d-block text-{{ section_st.text_alignment }}">
        {%- if section.settings.subheading != blank -%}
          {% if scroll_animation != 'disable' %}
            <motion-effect
              data-animate="fade-up"
              data-animate-delay="{{ animate_delay }}"
              class="block"
            >
          {% endif %}
          <div class="section-subheading fs-big-2 mb-sp-1 mb-1025-sp-2 heading-color subheading_weight">
            {{ section.settings.subheading }}
          </div>
          {% if scroll_animation != 'disable' %}
            </motion-effect>
          {% endif %}
        {%- endif -%}
        {%- if section.settings.title != blank -%}
          {% if scroll_animation != 'disable' or drawn_underline %}
            {% assign animate_delay = animate_delay | plus: 50 %}
            <motion-effect
              data-animate="{% if scroll_animation != 'disable' %}fade-up{% else %}highlighted-text{% endif %}"
              data-animate-delay="{{ animate_delay }}"
              class="block"
            >
          {% endif %}
          <h2 class="block section-heading {{ header_size }}">
            {% if drawn_underline %}
              {%- capture squiggle_svg_1 -%}
                <svg viewBox="0 0 184 26" fill="none"><use href="#squiggle-svg-1" /></svg>
              {%- endcapture -%}
              {%- capture squiggle_svg_2 -%}
               <svg viewBox="0 0 186 24" fill="none"><use href="#squiggle-svg-2" /></svg>
              {%- endcapture -%}
              {%- capture squiggle_svg_3 -%}
                 <svg viewBox="0 0 186 24" fill="none"><use href="#squiggle-svg-3" /></svg>
              {%- endcapture -%}
              {%- capture squiggle_svg_4 -%}
                <svg viewBox="0 0 220 50"fill="none"><use href="#squiggle-svg-4" /></svg>
              {%- endcapture -%}
              {%- capture squiggle_svg_5 -%}
                <svg viewBox="-347 -25 694 80" fill="none" role="presentation" preserveAspectRatio="none"><use href="#squiggle-svg-5" /></svg>
              {%- endcapture -%}
              {%- assign result = heading -%}
              {%- assign parts = result | split: '<em>' -%}
              {%- assign em_count = parts | size | minus: 1 -%}

              {%- for i in (1..em_count) -%}
                {%- assign idx = i | plus: 0 -%}
                {%- assign chunk = parts[idx] | default: '' -%}
                {%- assign text = chunk | split: '</em>' | first | strip_html | strip -%}
                {%- assign len_text = text | size -%}
                {%- capture open_em -%}
                {%- liquid
                  if drawn_underline_type == 'simple_underline'
                    assign svg = squiggle_svg_4 | append: '</em>'
                  elsif drawn_underline_type == 'curve_underline'
                    assign svg = squiggle_svg_5 | append: '</em>'
                  else
                    if len_text <= 4
                      assign svg = squiggle_svg_1 | append: '</em>'
                    elsif len_text <= 6
                      assign svg = squiggle_svg_2 | append: '</em>'
                    else
                      assign svg = squiggle_svg_3 | append: '</em>'
                    endif
                  endif
                -%}
                <em class="highlighted-text relative inline-flex{% if drawn_underline_type == 'simple_underline' %} simple_underline{% endif %} {{ drawn_underline_type }} not-italic" style="--animate-color:{{ drawn_underline_color }}">{{ svg }}</em>
              {%- endcapture -%}
                {%- assign open_em = open_em | remove: '</em>' -%}
                {%- assign heading = heading | replace_first: '<em>', open_em -%}
              {%- endfor -%}
            {% endif %}
            {{- heading -}}
          </h2>
          {% if scroll_animation != 'disable' or drawn_underline %}
            </motion-effect>
          {% endif %}
        {%- endif -%}
        {%- if section.settings.description != blank -%}
          {% if scroll_animation != 'disable' %}
            {% assign animate_delay = animate_delay | plus: 50 %}
            <motion-effect
              data-animate="fade-up"
              data-animate-delay="{{ animate_delay }}"
              class="block"
            >
          {% endif %}
          <div class="section-description mt-sp-4 prose">
            {{ section.settings.description }}
          </div>
          {% if scroll_animation != 'disable' %}
            </motion-effect>
          {% endif %}
        {%- endif -%}
      </div>
    {%- endif -%}
    {%- if section.blocks.size > 0 -%}
      <div class="relative max-w-custom mx-auto" style="--swiper-navigation-sides-offset: 0px;">
        {% if scroll_animation != 'disable' %}
          <motion-effect
            data-animate="fade-up"
            data-animate-delay="{{ animate_delay }}"
            class="block"
          >
        {% endif %}
        <testimonial-slide
          id="swiper-{{ section.id }}"
          class="swiper mb-sp-6 mb-md-50 {% if show_navigation %} max-w-custom-all{% endif %}"
          data-section-id="{{ section.id }}"
          data-autoplay="{{ slide_auto_change }}"
          data-auto-play-speed="{{ change_slide_every | times: 1000 }}"
          data-speed="300"
          data-mobile="1"
          data-tablet="1"
          data-desktop="1"
          style="--max-width: calc(100% - var(--swiper-navigation-size) * 2 - 15px)"
        >
          <div class="swiper-wrapper">
            {%- for block in section.blocks -%}
              {% assign block_st = block.settings %}
              <div class="swiper-slide">
                <div class="testimonials-item flex column justify-center" {{ block.shopify_attributes }}>
                  {% if section_st.show_icon_quote %}
                    <div
                      class="icon-quote inline-flex justify-center mb-sp-6 text-color"
                      style="--color-text: #e5e5e5;"
                    >
                      {% render 'icon-quote' | custom_width: 56 %}
                    </div>
                  {% endif %}
                  {% if block.settings.testimonial_quote %}
                    <div class="testimonials-quote inline-flex justify-center text-center heading-style fs-custom lh-small">
                      {{ block.settings.testimonial_quote }}
                    </div>
                  {% endif %}
                </div>
              </div>
            {%- endfor -%}
          </div>
        </testimonial-slide>
        {% if scroll_animation != 'disable' %}
          </motion-effect>
        {% endif %}
        {% if show_navigation %}
          {% if scroll_animation != 'disable' %}
            <motion-effect
              data-animate="fade-in"
              data-animate-delay="{{ animate_delay }}"
              class="block"
            >
          {% endif %}
          {%- render 'swiper-navigation', type: 'original', class-custom: 'testimonial-swiper-action' -%}
          {% if scroll_animation != 'disable' %}
            </motion-effect>
          {% endif %}
        {% endif %}
      </div>
      {%- if show_pagination -%}
        <testimonials-thumb
          id="testimonials-thumb-swiper-{{ section.id }}"
          class="swiper"
          data-desktop="{{ section_st.number_thumbs }}"
          data-tablet="{{ section_st.number_thumbs }}"
          style="--item-desktop: {{ section_st.number_thumbs }};--item-tablet: {{ section_st.number_thumbs }};--item-mb: 1;--gap-desktop: 60px;--gap: 60px;"
        >
          <div class="swiper-wrapper flex">
            {%- for block in section.blocks -%}
              {%- liquid
                assign block_st = block.settings
                if block_st.testimonial_image.alt != blank
                  assign alt_text = block_st.testimonial_image.alt
                else
                  assign alt_text = 'general.image.image_alt_default' | t
                endif
              -%}
              <div
                class="swiper-slide flex justify-center transition"
                style="--width: {{ section_st.image_width }}px;margin-right: 60px;"
              >
                <div
                  class="testimonials-thumb-item flex content-center pointer w-custom rounded"
                  style="{% if block_st.testimonial_image == blank %}--aspect-ratio: 7/3;{% endif %}"
                >
                  {% if block_st.testimonial_image != blank %}
                    {% render 'responsive-image',
                      type: 'banner',
                      image: block_st.testimonial_image,
                      image_alt: alt_text,
                      container: section_width,
                      column: section.blocks.size,
                      class: ' w-full h-full rounded',
                      class_motion: ' w-full h-full'
                    %}
                  {% else %}
                    {% render 'placeholder-render' | type: "collection" | class: 'w-full h-full img-placeholder rounded', class_motion: ' w-full h-full' %}
                  {% endif %}
                </div>
              </div>
            {%- endfor -%}
          </div>
        </testimonials-thumb>
      {% endif %}
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.testimonials.name",
  "tag": "section",
  "class": "section-testimonials",
  "max_blocks": 6,
  "disabled_on": {
    "groups": ["header", "footer", "custom.overlay"]
  },
  "settings": [
    {
      "type": "paragraph",
      "content": "t:sections.testimonials.how_to_use"
    },
    {
      "type": "header",
      "content": "t:sections.all.general"
    },
    {
      "type": "select",
      "id": "section_width",
      "options": [
        {
          "value": "fix_width",
          "label": "t:sections.all.layout.fix_width"
        },
        {
          "value": "stretch_width",
          "label": "t:sections.all.layout.stretch_width"
        },
        {
          "value": "full_width",
          "label": "t:sections.all.layout.full_width"
        }
      ],
      "default": "fix_width",
      "label": "t:sections.all.layout.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "info": "t:sections.all.colors.info",
      "default": "default-color-scheme"
    },
    {
      "type": "header",
      "content": "t:sections.all.content_header.label"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "t:sections.all.content_setting.subheading.label"
    },
    {
      "type": "richtext",
      "id": "title",
      "label": "t:sections.all.content_setting.heading.label"
    },
    {
      "type": "checkbox",
      "id": "drawn_underline",
      "default": true,
      "label": "t:sections.all.content_setting.drawn_underline.label",
      "info": "t:sections.all.content_setting.heading.info"
    },
    {
      "type": "select",
      "id": "drawn_underline_type",
      "label": "t:sections.all.content_setting.drawn_underline.type",
      "default": "squiggle_underline",
      "visible_if": "{{ section.settings.drawn_underline != false }}",
      "options": [
        {
          "value": "simple_underline",
          "label": "t:sections.all.content_setting.drawn_underline.value.simple_underline"
        },
        {
          "value": "curve_underline",
          "label": "t:sections.all.content_setting.drawn_underline.value.curve_underline"
        },
        {
          "value": "squiggle_underline",
          "label": "t:sections.all.content_setting.drawn_underline.value.squiggle_underline"
        }
      ]
    },
    {
      "type": "color",
      "id": "drawn_underline_color",
      "label": "t:sections.all.content_setting.drawn_underline.color",
      "default": "#FFB005",
      "alpha": true,
      "visible_if": "{{ section.settings.drawn_underline != false }}"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "t:sections.all.content_setting.description.label"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "large",
          "label": "t:sections.all.content_header.heading_size.options__1.label"
        },
        {
          "value": "medium",
          "label": "t:sections.all.content_header.heading_size.options__2.label"
        },
        {
          "value": "small",
          "label": "t:sections.all.content_header.heading_size.options__3.label"
        }
      ],
      "default": "medium",
      "label": "t:sections.all.content_header.heading_size.label"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "options": [
        {
          "value": "start",
          "label": "t:sections.all.text_alignment.options__1.label"
        },
        {
          "value": "center",
          "label": "t:sections.all.text_alignment.options__2.label"
        },
        {
          "value": "end",
          "label": "t:sections.all.text_alignment.options__3.label"
        }
      ],
      "default": "center",
      "label": "t:sections.all.text_alignment.alignment"
    },
    {
      "type": "header",
      "content": "t:sections.testimonials.settings.header"
    },
    {
      "type": "range",
      "id": "content_max_width",
      "min": 40,
      "max": 100,
      "unit": "%",
      "default": 70,
      "label": "t:sections.rich-text.settings.max_width.label",
      "info": "t:sections.rich-text.settings.max_width.info"
    },
    {
      "type": "range",
      "id": "image_width",
      "label": "t:sections.all.image.width",
      "default": 180,
      "min": 100,
      "max": 300,
      "step": 5,
      "unit": "px"
    },
    {
      "type": "checkbox",
      "id": "show_icon_quote",
      "default": true,
      "label": "t:sections.testimonials.settings.show_icon_quote.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.carousel.header"
    },
    {
      "type": "checkbox",
      "id": "show_navigation",
      "default": true,
      "label": "t:sections.all.carousel.show_navigation.label"
    },
    {
      "type": "checkbox",
      "id": "show_pagination",
      "default": true,
      "label": "t:sections.all.carousel.show_pagination.label"
    },
    {
      "type": "checkbox",
      "id": "slide_auto_change",
      "default": false,
      "label": "t:sections.all.carousel.slide_auto_change"
    },
    {
      "type": "range",
      "id": "change_slide_every",
      "min": 2,
      "max": 10,
      "step": 1,
      "unit": "s",
      "label": "t:sections.all.carousel.change_slide_every",
      "default": 5
    },
    {
      "type": "header",
      "content": "t:sections.main-product.settings.thumbnail_carousel_setting.label"
    },
    {
      "type": "range",
      "id": "number_thumbs",
      "min": 1,
      "max": 6,
      "default": 3,
      "label": "t:sections.main-product.settings.thumbnail_carousel_setting.number_thumbs"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 48
    },
    {
      "type": "header",
      "content": "t:sections.all.divider.section_divider_heading"
    },
    {
      "type": "checkbox",
      "id": "show_divider",
      "label": "t:sections.all.divider.show_divider",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "t:sections.testimonials.blocks.name",
      "settings": [
        {
          "type": "image_picker",
          "id": "testimonial_image",
          "label": "t:sections.all.image.label"
        },
        {
          "type": "inline_richtext",
          "id": "testimonial_quote",
          "label": "t:sections.testimonials.blocks.settings.quote.label",
          "default": "You can add text content from press comments, reviews, or testimonials here."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.testimonials.name",
      "category": "t:sections.group.storytelling",
      "blocks": [
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        }
      ]
    }
  ]
}
{% endschema %}
