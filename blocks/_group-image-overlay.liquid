    },
    {
      "type": "subheading"
    },
    {
      "type": "button"
    },
    {
      "type": "description"
    },
    {
      "type": "icon"
    }
  ],
  "presets": [
    {
      "name": "t:blocks.names.image_with_text_overlay",
      "blocks": [
