{%- liquid
  assign theme_st = settings
  assign section_st = section.settings
  assign open_all_question = section_st.open_all_question
-%}
{%- if block.settings.question != blank and block.settings.answer != blank -%}
  <div
    class="section__faq-items relative faq-block border-bottom"
  >
    <details
      class="collapsible-row{% if open_all_question %} detail-open{% endif %}"
      is="collapsible-row"
      {% if open_all_question %}
        open
      {% endif %}
    >
      <summary class="collapsible-row__summary not-highlight-tap py-sp-4 py-1025-sp-6">
        <div class="collapsible-heading">
          <div
            class="fs-big-2 heading-color transition pointer relative flex pe-20 subheading_weight"
          >
            {{ block.settings.question }}
          </div>
          <span class="open-children-toggle transition">
            <span class="icon_plus-animation heading-color"> </span>
          </span>
        </div>
      </summary>
      <div
        class="collapsible-row__content overflow-hidden"
      >
        <div class="faq_content-inner text-start mb-sp-6 prose">{{ block.settings.answer }}</div>
      </div>
    </details>
  </div>
{%- endif -%}

{% schema %}
{
  "name": "t:sections.faq.blocks.name",
  "class": "w-full motion-item",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.content.label"
    },
    {
      "type": "text",
      "id": "question",
      "label": "t:sections.faq.blocks.settings.question.question",
      "default": "Frequently asked questions?"
    },
    {
      "type": "richtext",
      "id": "answer",
      "label": "t:sections.faq.blocks.settings.question.answer",
      "default": "<p>Write the answer.</p>"
    }
  ],
  "presets": [{ "name": "t:sections.faq.blocks.name" }]
}
{% endschema %}
